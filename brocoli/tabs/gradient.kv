#:kivy 1.11.1

<GradientTab>:
    text: "palette"

    id: tab
    loop_gradient: loop_checkbox.active
    speed: gradient_speed_slider.value
    offset: gradient_offset_slider.value
    black_inside: black_inside_checkbox.active

    BoxLayout:
        MDLabel:
            text: "Loop gradient ?"
        MDCheckbox:
            id: loop_checkbox
            active: True

    BoxLayout:
        MDLabel:
            text: "Black inside ?"
        MDCheckbox:
            id: black_inside_checkbox
            value: True

    LabeledSlider:
        text: "Gradient speed"
        id: gradient_speed_slider
        min: 1
        max: 10
        value: root.speed

    LabeledSlider:
        text: "Gradient offset"
        id: gradient_offset_slider
        min: 0
        max: 1
        value: root.offset

    Widget:
        size_hint_y: 7

    MDRaisedButton:
        text: "Random gradient"
        on_press: tab.set_random_gradient()
        size_hint_x: 1



