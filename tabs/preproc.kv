#:kivy 1.11.1

<PreprocTab>:
    text: "file-document-edit"

    speed: gradient_speed_slider.value
    offset: gradient_offset_slider.value
    steps_power: steps_power_slider.value
    normalize_quantiles: quantiles_checkbox.active


    BoxLayout:
        MDLabel:
            text: "Normalize quantiles ?"
        MDCheckbox:
            id: quantiles_checkbox
            active: False

    LabeledSlider:
        text: "Steps power"
        id: steps_power_slider
        min: 0.1
        max: 4
        value: 1

    LabeledSlider:
        text: "Gradient speed"
        id: gradient_speed_slider
        min: 1
        max: 10

    LabeledSlider:
        text: "Gradient offset"
        id: gradient_offset_slider
        min: 0
        max: 1

    Label:
        size_hint_y: 8