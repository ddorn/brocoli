#:kivy 1.11.1

<CameraTab>:
    text: "crosshairs-gps"

    steps: int(2 ** steps_slider.value)
    pixel_size: pixel_slider.value
    kind: kind_slider.value
    bound: int(2 ** bound_slider.value)


    BoxLayout:
        orientation: "vertical"
        MDTextField:
            text: str(root.camera.center)
            on_text_validate: root.set_camera_center(self.text)
        LabeledSlider:
            text: "Pixel size"
            id: pixel_slider
            min: 1
            max: 10
            step: 1
            value: 1

        LabeledSlider:
            text: "Steps log"
            id: steps_slider
            min: 5
            max: 14

        LabeledSlider:
            text: "Coloration kind"
            id: kind_slider
            min: 0
            max: 3
            value: 1
            step: 1

        LabeledSlider:
            text: "Bound log"
            id: bound_slider
            min: 1
            max: 30
            value: 10


        Label:
            # For better spacing
            size_hint_y: 7

        MDRaisedButton:
            text: "Random position"
            on_release: root.set_random_position()
            size_hint_x: 1

