#:kivy 1.11.1

<MainWidget>:
    BoxLayout:
        size: root.size
        pos: root.pos

        Brocoli:
            id: brocoli
            size_hint: (0.7, 1)

            image: image

            camera_tab: camera_tab
            preproc_tab: preproc_tab
            gradient_tab: gradient_tab
            save_tab: save_tab

            colored_fractal: gradient_tab.colored_fractal

            Image:
                id: image
                pos: self.parent.pos
                size: self.parent.size
                source: "frac.png"
                allow_stretch: True
                mipmap: True

        MDTabs:
            size_hint_x: 0.3

            CameraTab:
                id: camera_tab
                brocoli: brocoli
            PreprocTab:
                id: preproc_tab
                brocoli: brocoli
                fractal: camera_tab.fractal
            GradientTab:
                id: gradient_tab
                brocoli: brocoli
                preproc_fractal: preproc_tab.preproc_fractal
            SaveTab:
                id: save_tab
                colored_fractal: gradient_tab.colored_fractal
                brocoli: brocoli


<LabeledSlider>:
    value: slider.value
    MDLabel:
        size_hint_x: 0.4
        text: self.parent.text + " ({}) :".format(round(slider.value, 2))
    MDSlider:
        id: slider
        size_hint_x: 0.6
        min: self.parent.min
        max: self.parent.max
        value: self.parent.value
        step: self.parent.step

<MDLabel>:
    halign: "center"
    theme_text_color: 'Primary'


<MyTab>:
    orientation: "vertical"
